{
  "name": "presspad",
  "version": "0.0.0",
  "private": true,
  "jest": {
    "testRegex": "__test__/*",
    "coverageDirectory": "./coverage/",
    "modulePathIgnorePatterns": [
      "__test__/database/",
      "__test__/api/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__snapshots__/**",
      "!**/client/**",
      "!**/server/app.js",
      "!**/coverage/**"
    ],
    "testEnvironment": "node"
  },
  "proxy": "http://localhost:8080",
  "nodemonConfig": {
    "watch": [
      "./server",
      "./package.json",
      "./client/src/constants"
    ]
  },
  "scripts": {
    "start": "node ./server/index.js",
    "dev": "concurrently --kill-others-on-fail \"cd client && npm start\" \"nodemon ./server/index.js\"",
    "client:init": "cd client && npm i",
    "build": "cd client && npm run build",
    "init:both": "npm i && npm run client:init",
    "coverage": "codecov",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:clearCache": "cross-env NODE_ENV=test jest --clearCache",
    "test:client": "cd client && npm test",
    "test:client:coverage": "NODE_ENV=test cd client && npm run test:coverage",
    "test": "cross-env NODE_ENV=test npm run test:coverage && npm run test:client:coverage",
    "test:current": "cross-env NODE_ENV=test jest server/__test__/api/admin.viewWithdrawRequests --runInBand --detectOpenHandles --forceExit",
    "heroku-postbuild": "npm run client:init && npm run build",
    "build:data:dev": "cross-env NODE_ENV=dev node server/database/data/development/index.js",
    "build:data:test": "cross-env NODE_ENV=build node server/database/data/test/index.js",
    "build:data:prd": "node server/database/data/production/index.js"
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@sentry/node": "^5.10.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "env2": "^2.2.2",
    "express": "^4.16.4",
    "firebase-admin": "^8.9.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "moment-range": "^4.0.2",
    "mongoose": "^5.8.5",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.2",
    "shortid": "^2.2.15",
    "stripe": "^7.15.0"
  }
}

{
  "name": "presspad",
  "version": "0.0.0",
  "private": true,
  "jest": {
    "testRegex": "__test__/*",
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__snapshots__/**",
      "!**/client/**",
      "!**/server/app.js",
      "!**/coverage/**"
    ],
    "testEnvironment": "node"
  },
  "proxy": "http://localhost:8080",
  "scripts": {
    "start": "node ./server/index.js",
    "dev": "concurrently --kill-others-on-fail \"cd client && npm start\" \"nodemon ./server/index.js\"",
    "client:init": "cd client && npm i",
    "build": "cd client && npm run build",
    "init:both": "npm i && npm run client:init",
    "coverage": "codecov",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:clearCache": "cross-env NODE_ENV=test jest --clearCache",
    "test:client": "cd client && npm test",
    "test:client:coverage": "NODE_ENV=test cd client && npm run test:coverage",
    "test": "cross-env NODE_ENV=test npm run test:coverage && npm run test:client:coverage",
    "test:current": "cross-env NODE_ENV=test jest server/__test__/api/reviews.js --runInBand --detectOpenHandles --forceExit",
    "heroku-postbuild": "npm run client:init && npm run build",
    "build:data:dev": "cross-env NODE_ENV=dev node server/database/data/development/index.js",
    "build:data:test": "cross-env NODE_ENV=build node server/database/data/test/index.js",
    "build:data:prd": "node server/database/data/production/index.js"
  },
  "devDependencies": {
    "codecov": "^3.5.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "24.7.1",
    "nodemon": "^1.19.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "env2": "^2.2.2",
    "express": "^4.16.4",
    "firebase-admin": "^8.0.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.5.8",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "shortid": "^2.2.14"
  }
}
